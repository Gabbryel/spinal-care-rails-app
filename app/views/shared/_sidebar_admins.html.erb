<% if current_user.admin %>
  <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 10%; min-width: 80px; height: calc(var(--vh) * 100);">
      <span class="fs-4 text-center">App <i class="fas fa-tools"></i></span>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item text-center ">
        <%= link_to root_path, class: 'nav-link text-white', aria_current: 'page' do %>
          <i class="fas fa-home"></i>
        <% end %>
      </li>
      <li class="nav-item text-center ">
        <%= link_to admin_path, class: 'nav-link text-white', aria_current: 'page' do %>
        <i class="fas fa-sliders-h"></i>
        <% end %>
      </li>
      <li class="nav-item text-center">
        <%= link_to team_members_path, class: 'nav-link text-white', aria_current: 'page' do %>
          <i class="fas fa-users"></i>
        <% end %>
      </li>
      <li class="nav-item text-center">
        <%= link_to medical_appliances_path, class: 'nav-link text-white', aria_current: 'page' do %>
          <i class="fas fa-laptop-medical"></i>
        <% end %>
      </li>
      <hr>
      <li style="font-size: 10px;" class="text-center"><%= current_user.email %></li>
      <li class="nav-item text-center">
        <%= link_to destroy_user_session_path, class: 'nav-link text-white', aria_current: 'page', method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>
        <% end %>
      </li>
    </ul>
  </div>
<% end %>