<div class="<%= @member.id ? 'member-edit-form-container' : 'member-new-form-container' %>">
  <div class="new_member_form">
    <h4 class="text-center"><%= @member.id ? 'ModificÄƒ membru': 'Membru nou' %></h4>
  <%= simple_form_for @member, html: { class: 'member-form' } do |f| %>
  <% if @member.errors.any? %>
    <div class="error-message">
      <%= @member.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
    <%= f.input :first_name, label: false, placeholder: 'Prenume' %>
    <%= f.input :last_name, label: false, placeholder: 'Nume' %>
    <%= f.input :role, collection: Profession.all.pluck(:name), label: false, prompt: 'Alege rol', id: 'role-input' %>
    <%= f.input :specialty, collection: Specialty.all.pluck(:name), label: false, prompt: 'Alege specialitate' %>
    <%= f.input :photo, as: :file, label: false %>
    <%= f.submit 'Trimite', class: 'btn btn-primary' %>
    <%= link_to team_members_path do %>
      <i class="fas fa-times cancel-btn"></i>
    <% end %>
  <% end %>
  </div>
</div>